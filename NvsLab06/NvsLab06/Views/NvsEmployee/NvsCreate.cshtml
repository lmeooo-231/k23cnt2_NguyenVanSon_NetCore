@model NvsLab06.Models.NvsEmployee
@{
    ViewData["Title"] = "Thêm nhân viên mới";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="NvsCreate" method="post">
    <div class="form-group">
        <label asp-for="NvsName"></label>
        <input asp-for="NvsName" class="form-control" />
        <span asp-validation-for="NvsName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NvsBirthDay"></label>
        <input asp-for="NvsBirthDay" class="form-control" type="date" />
        <span asp-validation-for="NvsBirthDay" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NvsEmail"></label>
        <input asp-for="NvsEmail" class="form-control" />
        <span asp-validation-for="NvsEmail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NvsPhone"></label>
        <input asp-for="NvsPhone" class="form-control" />
        <span asp-validation-for="NvsPhone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NvsSalary"></label>
        <input asp-for="NvsSalary" class="form-control" />
        <span asp-validation-for="NvsSalary" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NvsStatus"></label>
        <select asp-for="NvsStatus" class="form-control">
            <option value="true">Đang làm</option>
            <option value="false">Nghỉ việc</option>
        </select>
        <span asp-validation-for="NvsStatus" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Thêm mới</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
