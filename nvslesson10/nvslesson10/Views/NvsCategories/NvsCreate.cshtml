                        <label asp-for="CateStatus" class="control-label"></label>
                        <input asp-for="CateStatus" class="form-control" />
                        <span asp-validation-for="CateStatus" class="text-danger"></span>
                    </div>
                <div class="card-footer">
                        <div class="form-group">
                            <input type="submit" value="ghi lại" class="btn btn-primary" name="btnNvsCreate" />
                            <a asp-action="NvsIndex">Back to List</a>
                        </div>
                </div>
                </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
