@model nvslesson10.Models.NvsCategory

@{
    ViewData["Title"] = "thêm mới danh mục loại";
}



<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NvsCreate">
            <div class="card">
                <div class="card-header">
                    <h1>ViewData["Title"]</h1>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="CateId" class="control-label"></label>
                        <input asp-for="CateId" class="form-control" />
                        <span asp-validation-for="CateId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CateName" class="control-label"></label>
                        <input asp-for="CateName" class="form-control" />
                        <span asp-validation-for="CateName" class="text-danger"></span>
                    </div>
